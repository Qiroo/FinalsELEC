@{
    ViewData["Title"] = "Register";
}

<body>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <h2>REGISTER</h2>
        <form action="#" method="post">
            <input type="name" id="name" name="name" placeholder="Full Name" required>
            <input type="email" id="email" name="email" placeholder="Email Address" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            <br><br>
            <button type="submit"><strong>REGISTER</strong></button>
        </form>

        <div class="register-link">
            <p><strong>Already have an account?</strong> <a asp-area="" asp-controller="Home" asp-action="Index"><strong>LOGIN</strong></a></p>
        </div>
    </div>

</body>
