@{
    ViewData["Title"] = "Log In";
}

<body>
    <br>
    <br>
    <br>
    <br>
    <div class="container">
        <h2>SIGN IN</h2>
        <form action="#" method="post">
            <input type="email" id="email" name="email" placeholder="Email Address" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            <br><br>
            <button type="submit" asp-area="" asp-controller="Home" asp-action="Products"><strong>SIGN IN</strong></button>
        </form>

        <div class="register-link">
            <p><strong>Don't have an account?</strong> <a asp-area="" asp-controller="Home" asp-action="Register"><strong>REGISTER</strong></a></p>
        </div>
    </div>
</body>
